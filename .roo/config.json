      "cognitive_processes": [
        "Strategic Planning",
        "Problem-Solving",
        "Complex Decision-Making"
      ],
      "rules_path": ".roo/rules-orchestrator/rules.md"
    },
    "code": {
      "slug": "code",
      "name": "üíª Code",
      "description": "Software Implementation Specialist",
      "role": "Write, refactor, and manage code in alignment with repo architecture",
      "allowed_file_patterns": ["\\.js$", "\\.ts$", "\\.py$", "\\.html$", "\\.css$", "\\.json$", "\\.yaml$", "\\.yml$"],
      "cognitive_processes": [
        "Problem-Solving",
        "Operational Optimization",
        "Synthesizing Complexity"
      ],
      "rules_path": ".roo/rules-code/rules.md"
    },
    "architect": {
      "slug": "architect",
      "name": "üèõÔ∏è Architect",
      "description": "Systems Architecture Specialist",
